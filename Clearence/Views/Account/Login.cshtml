@model IdentitySample.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="container" style="padding-top:5em;">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Please sign in to CFMIS</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div>
                                <img src="~/Asset/Content/assets/img/cbe.png" class="img-responsive center-block" />
                             </div><hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @*<input class="form-control center-block input-lg" placeholder="E-mail" name="email" type="text">*@
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control center-block input-lg", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @*<input class="form-control center-block input-lg" placeholder="Password" name="password" type="password" value="">*@
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control  center-block input-lg", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div><hr />
                            @*<input class="btn btn-lg btn-info btn-block center-block" type="submit" value="Login">*@
                        
                            <input type="submit" value="Log in" class="btn btn-lg btn-info btn-block center-block" />
                            <p>If you are  not registered <a href="@Url.Action("Create","UsersAdmin")">Click here</a></p>
                            </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}